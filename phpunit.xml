<phpunit 
   backupGlobals="false"
   backupStaticAttributes="false"
   bootstrap="phpunit.php"
   colors="true"
   convertErrorsToExceptions="true"
   convertNoticesToExceptions="true"
   convertWarningsToExceptions="true"
   processIsolation="false"
   stopOnFailure="false"
   syntaxCheck="false"
>
   <testsuites>
      <testsuite name="RIPE DB Client Test Suite">
         <directory suffix="Test.php" phpVersion="5.4.0">./tests</directory>
         <exclude>./tests/live</exclude>
      </testsuite>
      <testsuite name="RIPE DB Live Test">
         <directory suffix="Test.php" phpVersion="5.5.0">./tests/live</directory>
      </testsuite>
   </testsuites>

   <groups>
      <exclude>
         <group>live</group>
      </exclude>
   </groups>

   <filter>
      <whitelist processUncoveredFilesFromWhitelist="true">
         <directory suffix=".php">./src</directory>
      </whitelist>
   </filter>

    <logging>
        <log type="coverage-html" target="./coverage" lowUpperBound="50" highLowerBound="80"/>
    </logging>
</phpunit>